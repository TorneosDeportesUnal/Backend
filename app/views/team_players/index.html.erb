<p id="notice"><%= notice %></p>

<h1>Team Players</h1>

<table>
  <thead>
    <tr>
      <th>Games played</th>
      <th>Points marked</th>
      <th>Assist</th>
      <th>Yellow cards</th>
      <th>Red cards</th>
      <th>White cards</th>
      <th>Player</th>
      <th>Team</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @team_players.each do |team_player| %>
      <tr>
        <td><%= team_player.games_played %></td>
        <td><%= team_player.points_marked %></td>
        <td><%= team_player.assist %></td>
        <td><%= team_player.yellow_cards %></td>
        <td><%= team_player.red_cards %></td>
        <td><%= team_player.white_cards %></td>
        <td><%= team_player.player %></td>
        <td><%= team_player.team %></td>
        <td><%= link_to 'Show', team_player %></td>
        <td><%= link_to 'Edit', edit_team_player_path(team_player) %></td>
        <td><%= link_to 'Destroy', team_player, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

