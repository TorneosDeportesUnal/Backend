<p id="notice"><%= notice %></p>

<h1>Gamefields</h1>

<table>
  <thead>
    <tr>
      <th>Location</th>
      <th>Discipline</th>
      <th>Match</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @gamefields.each do |gamefield| %>
      <tr>
        <td><%= gamefield.location %></td>
        <td><%= gamefield.discipline %></td>
        <td><%= gamefield.match %></td>
        <td><%= link_to 'Show', gamefield %></td>
        <td><%= link_to 'Edit', edit_gamefield_path(gamefield) %></td>
        <td><%= link_to 'Destroy', gamefield, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

