<p id="notice"><%= notice %></p>

<h1>Tournament Phases</h1>

<table>
  <thead>
    <tr>
      <th>Phase type</th>
      <th>Tournament</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tournament_phases.each do |tournament_phase| %>
      <tr>
        <td><%= tournament_phase.phase_type %></td>
        <td><%= tournament_phase.tournament %></td>
        <td><%= link_to 'Show', tournament_phase %></td>
        <td><%= link_to 'Edit', edit_tournament_phase_path(tournament_phase) %></td>
        <td><%= link_to 'Destroy', tournament_phase, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

