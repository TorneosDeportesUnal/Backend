<p id="notice"><%= notice %></p>

<h1>Group Teams</h1>

<table>
  <thead>
    <tr>
      <th>Position in group</th>
      <th>Wins</th>
      <th>Loses</th>
      <th>Group</th>
      <th>Team</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @group_teams.each do |group_team| %>
      <tr>
        <td><%= group_team.position_in_group %></td>
        <td><%= group_team.wins %></td>
        <td><%= group_team.loses %></td>
        <td><%= group_team.group %></td>
        <td><%= group_team.team %></td>
        <td><%= link_to 'Show', group_team %></td>
        <td><%= link_to 'Edit', edit_group_team_path(group_team) %></td>
        <td><%= link_to 'Destroy', group_team, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

