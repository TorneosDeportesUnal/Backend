<p id="notice"><%= notice %></p>

<h1>Team Groups</h1>

<table>
  <thead>
    <tr>
      <th>Position in group</th>
      <th>Position in group</th>
      <th>Group draw</th>
      <th>Group wins</th>
      <th>Group loses</th>
      <th>Group</th>
      <th>Team</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @team_groups.each do |team_group| %>
      <tr>
        <td><%= team_group.position_in_group %></td>
        <td><%= team_group.position_in_group %></td>
        <td><%= team_group.group_draw %></td>
        <td><%= team_group.group_wins %></td>
        <td><%= team_group.group_loses %></td>
        <td><%= team_group.group %></td>
        <td><%= team_group.team %></td>
        <td><%= link_to 'Show', team_group %></td>
        <td><%= link_to 'Edit', edit_team_group_path(team_group) %></td>
        <td><%= link_to 'Destroy', team_group, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

